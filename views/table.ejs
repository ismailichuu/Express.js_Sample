<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header.ejs') %>

    <body class="bg-dark">
        <div class="container-fluid mt-5 table">
            <table class="table table-dark ">
                <h1 class="text-center mb-5 fs-2 text-white">Available Users</h1>
                <thead>
                    <tr>
                        <th scope="col" class="fs-5">id</th>
                        <th scope="col" class="fs-5">Name</th>
                        <th scope="col" class="fs-5">Email</th>
                        <th scope="col" class="fs-5">Age</th>
                        <th scope="col" class="fs-5">Role</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => {%>
                    <tr>
                        <th scope="row"><%= user.id %></th>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.age %></td>
                        <td><%= user.role %></td>
                    </tr>
                    <% } ) %>
                </tbody>
            </table>
        </div>
        <%- include('./partials/script.ejs') %>
    </body>

</html>